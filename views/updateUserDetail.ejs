<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../views/partials/head.ejs', {title: 'Update User' }); %>
</head>

<body>
    <div id="page-container">
        <div id="content-wrap">
            <%- include('../views/partials/navbar.ejs'); %>
                <div id="message">

                    <% if ( typeof updateMessage !=='undefined' ) { %>
                        <h5 class="txt-color-theme txt-cntr">
                            <%= updateMessage %>
                        </h5>
                        <% } %>
                            <% if ( typeof updateInfoMessage !=='undefined' && updateInfoMessage.length !==0) { %>
                                <h5 class="txt-color-theme txt-cntr">
                                    <%= updateInfoMessage %>
                                </h5>
                                <% } %>
                                    <form action="/user/updateGDriver" method="POST">
                                        <div class="container-cntr flex-row">
                                            <section id="personal-detail-container">
                                                <h4 class="txt-color-theme">Enter your Information</h4>
                                                <div class="mb-3">
                                                    <label for="firstName" class="form-label">First
                                                        Name</label>
                                                    <input type="text" class="form-control" name="firstName"
                                                        id="firstName" aria-describedby="emailHelp" required />
                                                </div>
                                                <div class="mb-3">
                                                    <label for="lastName" class="form-label">Last
                                                        Name</label>
                                                    <input type="text" class="form-control" name="lastName"
                                                        id="lastName" required />
                                                </div>
                                                <div class="mb-3">
                                                    <label for="licenseNumber" class="form-label">License
                                                        number</label>
                                                    <input type="text" class="form-control" name="licenseNumber"
                                                        id="licenseNumber" required />
                                                </div>
                                                <div class="mb-3">
                                                    <label for="dob" class="form-label">DOB</label>
                                                    <input type="date" class="form-control" name="dob" id="dob"
                                                        required />
                                                </div>
                                                <button type="submit" class="btn txt-color">Update
                                                    user</button>
                                            </section>
                                            <section id="car-detail-container">
                                                <h4 class="txt-color-theme">Enter car details</h4>

                                                <div class="mb-3">
                                                    <label for="make" class="form-label">Car
                                                        Name</label>
                                                    <input type="text" class="form-control" name="make" id="make"
                                                        required />
                                                </div>
                                                <div class="mb-3">
                                                    <label for="model" class="form-label">Model</label>
                                                    <input type="text" class="form-control" name="model" id="model"
                                                        required />
                                                </div>
                                                <div class="mb-3">
                                                    <label for="year" class="form-label">Register
                                                        Year</label>
                                                    <input type="number" class="form-control" name="year" id="year"
                                                        required />
                                                </div>
                                                <div class="mb-3">
                                                    <label for="plateNumber" class="form-label">Plate
                                                        Number</label>
                                                    <input type="text" class="form-control" name="plateNumber"
                                                        id="plateNumber" required />
                                                </div>
                                            </section>
                                        </div>
                                    </form>

                </div>


        </div>
        <%- include('../views/partials/footer.ejs'); %> <%- include('../views/partials/scripts.ejs'); %>
    </div>
    </div>
</body>

</html>