<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../views/partials/head.ejs' , {title: 'Sign Up'}); %>
</head>

<body>
    <%- include('../views/partials/navbar.ejs'); %>
        <section id="login">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-wrap">
                            <h1>Sign Up</h1>
                            <form role="form" action="/user/create-user" method="post" id="login-form" autocomplete="off">
                                <div class="form-group">
                                    <label for="userName" class="sr-only">Email</label>
                                    <input type="text" name="userName" id="userName" class="form-control" placeholder="User Name">
                                    <% if (typeof userNameError !== 'undefined') { %>
                                    <div id="emailHelp" class="form-text txt-color-theme"> <%= userNameError %></div>
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="sr-only">Password</label>
                                    <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <label for="confirmPassword" class="sr-only">Confirm Password</label>
                                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Password">
                                    <% if (typeof passwordError !== 'undefined') { %>
                                        <div id="emailHelp" class="form-text txt-color-theme"><%= passwordError %></div>
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <label for="userType" class="sr-only">User Type</label>
                                    <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" id="userTypeBtn"aria-expanded="false">
                                          Driver
                                        </button>
                                        <ul class="dropdown-menu">
                                          <li><a class="dropdown-item" href="#">Driver</a></li>
                                          <li><a class="dropdown-item" href="#">Admin</a></li>
                                          <li><a class="dropdown-item" href="#">Examiner</a></li>
                                        </ul>
                                      </div>
                                      <input type="hidden" name="userType" value="Driver" id="userType">
                                      <% if (typeof emptyFieldError !== 'undefined') { %>
                                        <div id="emailHelp" class="form-text txt-color-theme"> <%= emptyFieldError %></div>
                                        <% } %>
                                </div>

                                <input type="submit" id="btn-login" class="btn txt-color" value="Sign Up">
                            </form>
                            <a href="/login" class="forget txt-color-theme" data-toggle="modal" data-target=".forget-modal">Login</a>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('../views/partials/scripts.ejs'); %>
</body>

</html>