<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../views/partials/head.ejs' , {title: 'Login'}); %>
</head>

<body>
    <%- include('../views/partials/navbar.ejs'); %>
        <section id="login">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-wrap">
                            <h1>Log in with your username</h1>
                            <form role="form" action="/user/create-session" method="post" id="login-form" autocomplete="off">
                                <div class="form-group">
                                    <label for="username" class="sr-only">Username</label>
                                    <input type="text" name="username" id="username" class="form-control" placeholder="Username">
                                    <% if (typeof usernameError !== 'undefined') { %>
                                        <div id="emailHelp" class="form-text txt-color-theme"><%= usernameError %></div>
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="sr-only">Password</label>
                                    <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                                    <% if (typeof passwordError !== 'undefined') { %>
                                        <div id="emailHelp" class="form-text txt-color-theme"><%= passwordError %></div>
                                    <% } %>
                                </div>
                                <% if (typeof emptyFieldError !== 'undefined') { %>
                                    <div id="emailHelp" class="form-text txt-color-theme"> <%= emptyFieldError %></div>
                                    <% } %>
                                <input type="submit" id="btn-login" class="btn txt-color" value="Log in">
                            </form>
                            <a href="" class="forget txt-color-theme" data-toggle="modal" data-target=".forget-modal">Forgot your password?</a>
                            <a href="/user/sign-up/" class="forget txt-color-theme" data-toggle="modal" data-target=".forget-modal">Sign Up</a>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include('../views/partials/scripts.ejs'); %>
</body>

</html>